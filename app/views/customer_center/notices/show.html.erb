<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<section id="sl_notice_show">
  <div class="slboard_content">
    <div class="sl_content_header">
      <h3><%= @notice.title %></h3>
      <p><%=t(:label_name) %> :<%= @notice.user.name %>&nbsp;&nbsp;&nbsp; <%=t(:label_created_at) %> : <%= @notice.created_at %></p>
    </div>
    <div class="sl_content_main">
      <div class="sl_content_text"><%= simple_format(@notice.notice_content.content) %></div>
    </div>
  </div>
  <div id="sl_content_bottom_menu">
    <%= link_to t(:link_list),customer_center_notices_path %>
    <% if can? :update, Notice %>
    &nbsp; | &nbsp; <%= link_to t(:link_edit), edit_customer_center_notice_path(@notice),:rel=>"nofollow" %>
    <% end %>
    <% if can? :delete, Notice %>
    &nbsp; | &nbsp; <%= link_to t(:link_delete), ['customer_center',@notice], method: :delete, data: { confirm: t(:delete_confirm) },:rel=>"nofollow" %>
    <% end %>
  </div>
</section>
