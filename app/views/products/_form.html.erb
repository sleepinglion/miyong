<%= form_for @product, :html => {:multipart => true,:class=>'form-horizontal'} do |f| %>
	<% if @product.errors.any? %>
	<div id="error_explanation">
  <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
  	<ul>
  		<% @product.errors.full_messages.each do |msg| %>
  		<li><%= msg %></li>
  		<% end %>
		</ul>
	</div>
<% end %>
<div class="form-group">
	<%= f.label :product_category_id,:class=>'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= f.select :product_category_id, options_from_collection_for_select(ProductCategory.where(:enable=>true), 'id', 'title'),:class=>"form-control" %>
	</div>
</div>
<div class="form-group">
	<%= f.label :title,:class=>'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= f.text_field :title,:class=>'form-control',:required=>'required' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :price,:class=>'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= f.text_field :price,:class=>'form-control',:required=>'required' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :photo,:class=>'col-sm-2 control-label' %>
	<div class="col-sm-10">
  <%= f.file_field :photo %>
  <%= f.hidden_field :photo_cache %>
	</div>
</div>
<div class="form-group">
	<%= f.label :description,:class=>'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= f.text_field :description,:class=>'form-control',:required=>'required' %>
	</div>
</div>
	<%= f.fields_for :product_content do |c| %>
<div class="form-group">
	<%= c.label :content,:class=>'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= c.text_area :content,:class=>'form-control',:required=>'required' %>
	</div>
</div>
<% end %>
<div class="form-group actions">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit :class=>"btn btn-primary" %>
	</div>
</div>
<% end %>
